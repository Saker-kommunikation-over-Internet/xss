      <label for="entry">Sign the Guestbook:</label>
      <input type="text" id="entry" name="entry" />
      <input type="submit" value="Sign" />
    </form>
    <h3>Entries</h3>
    <% entries.forEach(function(entry) { %>
    <div><%- entry %></div>
